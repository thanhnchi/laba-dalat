@model LABA_WebAdmin_Corporate.ViewModels.VM_BreadCrumb


@if (Model != null)
{
	<div class="page-breadcrumb d-none d-md-flex align-items-center justify-content-end mb-3">
		<div class="pl-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					@if (!string.IsNullOrEmpty(Model.ParentName))
					{
						<li class="breadcrumb-item"><a href="@Model.ParentUrl">@Model.ParentName</a></li>
					}
					@if (!string.IsNullOrEmpty(Model.ChildName))
					{
						<li class="breadcrumb-item"><a href="@Model.ChildUrl">@Model.ChildName</a></li>
					}
					<li class="breadcrumb-item active" aria-current="page">@Model.CurrentName</li>
				</ol>
			</nav>
		</div>
	</div>
}
else
{
	<div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
		<div class="pl-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item">
						<a href="/"><i class="bx bx-home-alt"></i></a>
					</li>
				</ol>
			</nav>
		</div>
	</div>
}