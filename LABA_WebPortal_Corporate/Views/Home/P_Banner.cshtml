@{
	var farmInfo = ViewBag.FarmInfo as LABA_WebPortal_Corporate.Models.M_Farm;
}
<section class="wrapper image-wrapper bg-image bg-overlay bg-overlay-light-500" data-image-src="./assets/img/other/bg22.png" style="background-image: url(./assets/img/other/bg22.png)">
	<div class="container py-10 text-center">
		<div class="row gx-lg-8 gx-xl-12 gy-10 align-items-center">
			<div class="col-lg-7">
				<figure><img class="w-auto" src="~/assets/img/other/banner.svg" alt="" /></figure>
			</div>
			<!-- /column -->
			<div class="col-md-10 offset-md-1 offset-lg-0 col-lg-5 text-center text-lg-start">

				<h1 class="display-1 mb-5 mx-md-n5 mx-lg-0 fs-40">
					<span class="typer text-gradient gradient-6"
						  data-delay="200"
						  data-words="@(farmInfo.name ?? "Laba The Eco Parks")">
					</span><span class="cursor text-primary" data-owner="typer"></span>
				</h1>
				<p class="lead fs-lg mb-7">@farmInfo.slogan</p>
				<p>@farmInfo.description</p>
				<span><a href="/dich-vu" class="btn btn-primary rounded-pill me-2">Khám phá ngay</a></span>
			</div>
			<!-- /column -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container -->
	<div class="overflow-hidden">
		<div class="divider text-white mx-n2">
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 70"><path fill="currentColor" d="M1440,70H0V45.16a5762.49,5762.49,0,0,1,1440,0Z" /></svg>
		</div>
	</div>
</section>

