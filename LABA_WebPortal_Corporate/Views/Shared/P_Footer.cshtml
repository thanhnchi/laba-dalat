@{
	var farmInfo = ViewBag.FarmInfo as LABA_WebPortal_Corporate.Models.M_Farm;
	var newsCategory = ViewBag.NewsCategory as LABA_WebPortal_Corporate.Models.M_NewsCategoryMenu;
}

<footer class="wrapper pattern-wrapper bg-image text-inverse" data-image-src="/assets/img/other/pattern.png">
	<div class="container py-15">
		<div class="row gy-6 gy-lg-0">
			<div class="col-md-12 col-lg-3">
				<div class="widget">
					<img src="@farmInfo.imageLogo" class="h-13" alt="@farmInfo.name" />
					<div class="mt-5">
						<h4 class="widget-title text-white mb-3">@farmInfo.name</h4>
						<p class="mb-5">@farmInfo.slogan</p>
					</div>
					<nav class="nav social social-white">
						@if (!string.IsNullOrEmpty(farmInfo.faceBook))
						{
							<a href="@farmInfo.faceBook"><i class="uil uil-facebook-f"></i></a>
						}
						@if (!string.IsNullOrEmpty(farmInfo.email))
						{
							<a href="mailto:@farmInfo.email"><i class="uil uil-envelope-alt"></i></a>
						}
						@if (!string.IsNullOrEmpty(farmInfo.telephoneNumber))
						{
							<a href="tel:@farmInfo.telephoneNumber"><i class="uil uil-phone-volume"></i></a>
						}
					</nav>
					<!-- /.newsletter-wrapper -->
				</div>
				<!-- /.widget -->
			</div>
			<!-- /column -->
			<div class="col-md-4 col-lg-3">
				<div class="widget">
					<h4 class="widget-title text-white mb-3">Liên kết</h4>
					<ul class="list-unstyled  mb-0">
						<li><a href="/gioi-thieu">Giới thiệu</a></li>
						<li><a href="/dich-vu">Dịch vụ</a></li>
						<li><a href="/tin-tuc">Tin tức</a></li>
						<li><a href="/lien-he">Liên hệ</a></li>
					</ul>
				</div>
				<!-- /.widget -->
			</div>
			<!-- /column -->
			<div class="col-md-4 col-lg-3">
				<div class="widget">
					<h4 class="widget-title text-white mb-3">Dịch vụ</h4>
					<ul class="list-unstyled  mb-0">
						@if (newsCategory.newsCategoryServiceObjs != null)
						{
							foreach (var item in newsCategory.newsCategoryServiceObjs)
							{
								<li><a href="/dich-vu?c=@item.id">@item.name</a></li>
							}
						}
					</ul>
				</div>
				<!-- /.widget -->
			</div>
			<!-- /column -->
			<div class="col-md-4 col-lg-3">
				<div class="widget">
					<h4 class="widget-title text-white mb-3">Thông tin</h4>
					<address class=" pe-xxl-17">

						@if (!string.IsNullOrEmpty(@farmInfo.addressObj?.addressText))
						{
							<span>@farmInfo.addressObj?.addressText,</span>
						}
						@if (!string.IsNullOrEmpty(farmInfo.addressObj?.wardObj?.name))
						{
							<span>@farmInfo.addressObj?.wardObj?.name,</span>
						}
						@if (!string.IsNullOrEmpty(farmInfo.addressObj?.districtObj?.name))
						{
							<span>@farmInfo.addressObj?.districtObj?.name,</span>
						}
						@if (!string.IsNullOrEmpty(farmInfo.addressObj?.provinceObj?.name))
						{
							<span>@farmInfo.addressObj?.provinceObj?.name</span>
						}
					</address>
					<a href="mailto:@farmInfo.email">@farmInfo.email</a><br />
					<a href="tel:@farmInfo.telephoneNumber">@farmInfo.telephoneNumber</a>
				</div>
				<!-- /.widget -->
			</div>
			<!-- /column -->
		</div>
		<!--/.row -->
	</div>
	<!-- /.container -->
	<div class="text-center bg-dark py-3">
		<p class="m-0">© 2022 <a href="https://h2aits.com" class="text-primary">H2A IT Solution</a>. All rights reserved.</p>
	</div>
</footer>
<div class="progress-wrap">
	<svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
		<path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
	</svg>
</div>
